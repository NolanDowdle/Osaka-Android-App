<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity"
    android:background="@drawable/backgroundtestapp3">

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Location And Hours"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Osaka - Boone 214 Southgate Dr #22 Boone, NC 28607 Phone: (828) 262-0555"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:background="#FDFFFFFF"
        android:gravity="center"
        android:text="Monday 11 AM - 10 PM \nTuesday 11 AM - 10 PM \nWednesday 11 AM - 10 PM \nThursday 11 AM - 10 PM \nFriday 11 AM - 10:30 PM \nSaturday 11 AM - 10:30 PM \nSunday 11 AM - 10:00 PM"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/locationMapsButton"
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:background="@drawable/rounded_button"
        android:text="Open Google Maps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>