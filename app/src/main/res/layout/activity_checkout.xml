<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:background="@drawable/backgroundtestapp3">

    <TextView
        android:id="@+id/textViewSendOrder"
        android:layout_width="254dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:background="#C1FFFFFF"
        android:gravity="center"
        android:text="@string/please_fill_in_the_following_before_sending_the_order"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="75dp"
        android:background="#C1FFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSendOrder" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="75dp"
        android:background="#C1FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="75dp"
        android:background="#C1FFFFFF"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/sendOrderButton"
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/send_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/openMapsCheckout"
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="Open Maps"
        app:layout_constraintBottom_toTopOf="@+id/sendOrderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>