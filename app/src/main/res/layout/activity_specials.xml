<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecialsActivity"
    android:background="@drawable/backgroundtestapp3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/buttonHibachiVegetableToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Hibachi Vegetable To-Go Special \n $6.00" />

        <Button
            android:id="@+id/buttonHibachiChickenToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Hibachi Chicken To-Go Special \n $6.00" />

        <Button
            android:id="@+id/buttonTeriyakiChickenToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Teriyaki Chicken To-Go Special \n $6.00" />

        <Button
            android:id="@+id/buttonSesameChickenToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Sesame Chicken To-Go Special \n $6.00" />

        <Button
            android:id="@+id/buttonGeneralTsoChickenToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ General Tso's Chicken To-Go Special \n $6.00" />

        <Button
            android:id="@+id/buttonHibachiShrimpToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Hibachi Shrimp To-Go Special \n $6.95" />

        <Button
            android:id="@+id/buttonHibachiSteakToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Hibachi Steak To-Go Special \n $6.95" />

        <Button
            android:id="@+id/buttonTeriyakiSteakToGoSpecial"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="15dp"
            android:text="6$ Teriyaki Steak To-Go Special \n $6.95" />

    </LinearLayout>

</ScrollView>