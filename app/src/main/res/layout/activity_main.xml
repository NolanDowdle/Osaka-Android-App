<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundtestapp3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="286dp"
        android:layout_height="244dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/orderOnlineButton"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/rounded_button"
        android:text="Order Online"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_button"
        android:text="Location / Hours"
        app:layout_constraintBottom_toTopOf="@+id/viewCartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderOnlineButton" />

    <Button
        android:id="@+id/viewCartButton"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_button"
        android:text="View Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationButton" />
</androidx.constraintlayout.widget.ConstraintLayout>